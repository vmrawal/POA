<core:View
	controllerName="view.LineItem"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		title=" {i18n>lineItemTitle}"
		showNavButton="true"
		navButtonPress="handleNavBack"
		class="sapUiFioriObjectPage">
		<footer>
			<Bar>
			</Bar>
		</footer>
		<content>
			<ObjectHeader
				title="{PurchaseOrderItemID}"
				number="{Amount}"
				numberUnit="{CurrencyCode}" >
				<attributes>
					<ObjectAttribute
						text="{ProductName}" />
				</attributes>
			</ObjectHeader>
			<form:SimpleForm
				id="form"
				minWidth="1024"
				maxContainerCols="2" >
				<core:Title text="Delivery on" />
					<Label text="Plant"/>
					<Text text="SAP AG"/>
					<Label text="Street"/>
					<Text text="Dietmar-Hopp-Allee"/>
					<Label text="City"/>
					<Text text="Walldorf"/>
					<Label text="Country"/>
					<Text text="Germany"/>
			</form:SimpleForm>
			<Panel
				headerText="Header for Panel">
			</Panel>
			<List
				headerText="Header for List"
				backgroundDesign="Translucent"
				noDataText="{i18n>noData}">
			</List>
			<Table
				headerText="Header for Table">
			</Table>
		</content>
	</Page>
</core:View>